{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["vue3/src/**/*.ts", "vue3/src/**/*.d.ts", "vue3/src/**/*.tsx", "vue3/src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
